<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/item_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_rectangle"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_3ssp"
        android:layout_marginRight="@dimen/_3ssp"
        android:layout_marginTop="@dimen/_3ssp"
        android:layout_marginBottom="@dimen/_1ssp">

        <LinearLayout
            android:padding="@dimen/_8ssp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_3ssp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivUser"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/avatar" />

            <LinearLayout
                android:paddingLeft="@dimen/_7sdp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mario Michel"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"/>

                <TextView
                    android:id="@+id/tvCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PT.JAYA INDONESIA"
                    android:gravity="left"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="#000" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>